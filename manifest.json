{
    "name": "Post Save",
    "description": "Save Twitter Post in JSON",
    "version": "1.0.2",
    "manifest_version": 3,
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage", "tabs"],
    "content_scripts": [
      {
        "matches": ["https://twitter.com/**", "https://x.com/**"],
        "js": ["content.js", "tweet_parser.js"]
      }
    ]
}
